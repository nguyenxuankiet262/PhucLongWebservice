<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ActivityMain"
    >

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NavBot"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/nav_bar_style"
        app:itemTextColor="@color/nav_bar_style"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/NavBot"
            android:background="@color/colorDesperate"/>
    </com.aurelhubert.ahbottomnavigation.AHBottomNavigation>

    <com.phuclongappv2.xk.phuclongappver2.CustomViewPager
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="?android:attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:fitsSystemWindows="true"/>
</RelativeLayout>