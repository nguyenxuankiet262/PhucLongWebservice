<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Phone"
                            android:drawablePadding="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:drawableLeft="@drawable/ic_phone_android_green_24dp"/>
                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textSize="15sp"
                            android:text="+841678273762"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/personal_info"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Personal Information"
                            android:drawablePadding="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:drawableLeft="@drawable/ic_face_green_24dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.nex3z.notificationbadge.NotificationBadge
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/badge"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:layout_centerInParent="true"
                                android:layout_toStartOf="@id/btn_open_info"
                                />
                            <ImageView
                                android:id="@+id/btn_open_info"
                                android:layout_centerInParent="true"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/detail_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:drawableLeft="@drawable/ic_person_pin_black_24dp"
                            android:drawablePadding="12dp"
                            android:text="Họ và tên"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/name_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:focusable="true"
                            android:maxLength="20"
                            android:focusableInTouchMode="true"
                            android:hint="Nhập họ và tên"
                            android:inputType="textPersonName"
                            android:textSize="15sp"
                            app:met_floatingLabel="highlight"
                            app:met_singleLineEllipsis="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:drawableLeft="@drawable/ic_home_black_24dp"
                            android:drawablePadding="10dp"
                            android:text="Địa chỉ"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/address_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:hint="Nhập địa chỉ"
                            android:inputType="text"
                            android:textSize="15sp"
                            app:met_floatingLabel="highlight"
                            app:met_singleLineEllipsis="true" />
                        <info.hoang8f.widget.FButton
                            android:id="@+id/save_btn"
                            android:text="Chỉnh sửa"
                            android:textColor="@color/colorWhite"
                            android:shadowColor="@color/colorBlack"
                            app:fButtonColor="@color/colorPrimaryDark"
                            app:shadowColor="@color/colorBlack"
                            app:shadowEnabled="true"
                            app:shadowHeight="5dp"
                            app:cornerRadius="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"/>
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>
                <LinearLayout
                    android:id="@+id/my_history"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="History"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_history_green_24dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/new_layout"
                            android:layout_centerInParent="true"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBadge"
                            android:layout_toLeftOf="@id/btn_open_history">
                            <TextView
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New"
                                android:textColor="@color/white"/>
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/btn_open_history"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAYMENT"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <LinearLayout
                    android:id="@+id/payment_paypal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Paypal"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/icon_paypal_green"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>
                <LinearLayout
                    android:id="@+id/payment_momo"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Credit card"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_credit_card_green_24dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOTIFICATION"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Notification"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_notifications_active_green_24dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Switch
                            android:id="@+id/btn_noti"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFOMATION"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Version"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_info_green_24dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="v1.0.0"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>
                <LinearLayout
                    android:id="@+id/feedback_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Feedback"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_feedback_green_24dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSearchBar"/>
                <LinearLayout
                    android:id="@+id/signout_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sign out"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_exit_to_app_green_24dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</android.support.v4.widget.NestedScrollView>