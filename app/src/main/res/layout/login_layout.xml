<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >
    <TextView
        android:layout_centerInParent="true"
        android:layout_above="@id/image_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập vào Phúc Long VN"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBlack"/>
    <ImageView
        android:id="@+id/image_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_signin"
        android:layout_centerInParent="true"/>
    <info.hoang8f.widget.FButton
        android:layout_below="@id/image_v1"
        android:layout_centerInParent="true"
        android:id="@+id/btn_login"
        android:text="Đăng nhập"
        android:textColor="@color/colorWhite"
        android:shadowColor="@color/colorBlack"
        app:fButtonColor="@color/colorPrimaryDark"
        app:shadowColor="@color/colorBlack"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_login"
        android:layout_centerInParent="true"
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chúng tôi sẽ không sử dụng thông tin của bạn "/>
    <TextView
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="với bất kì mục đích nào khác"/>

</RelativeLayout>