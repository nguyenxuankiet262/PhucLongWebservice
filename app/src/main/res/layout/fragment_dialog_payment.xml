<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_payment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="16dp"
                android:text="Payment"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDesperate"></View>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_credit_card_black_22dp"
                    android:paddingStart="18dp"
                    android:text="Credit card"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/radio_paypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:drawableLeft="@drawable/ic_paypal"
                    android:drawablePadding="5dp"
                    android:paddingLeft="16dp"
                    android:text="Paypal"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/radi_cash_on_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:drawableLeft="@drawable/ic_attach_money_black_22dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="18dp"
                    android:text="Cash on delivery"
                    android:textSize="15sp" />
            </RadioGroup>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <info.hoang8f.widget.FButton
                    android:id="@+id/dialog_back_payment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:shadowColor="@color/colorBlack"
                    android:text="Back"
                    android:textColor="@color/colorWhite"
                    app:cornerRadius="10dp"
                    app:fButtonColor="@color/colorCancel"
                    app:shadowColor="@color/colorBlack"
                    app:shadowEnabled="true"
                    app:shadowHeight="5dp" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/dialog_next_payment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="16dp"
                    android:shadowColor="@color/colorBlack"
                    android:text="Next"
                    android:textColor="@color/colorWhite"
                    app:cornerRadius="10dp"
                    app:fButtonColor="@color/colorPrimaryDark"
                    app:shadowColor="@color/colorBlack"
                    app:shadowEnabled="true"
                    app:shadowHeight="5dp" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>